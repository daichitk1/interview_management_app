<% content_for :title, "Interviews" %>

<%= link_to "新規面接日程追加", new_interview_path, class: "btn btn-primary" %>

<div id="interviews">
  <h2>選考状況</h2>
  <div class="h3-border">
    <h3>内定</h3>
    <% @get_hired_interviews.each do |interview| %>
      <%= link_to interview.title, interview_path(interview.id), class: "btn btn-outline-secondary me-1" %>
    <% end %>
  </div>
  <div class="h3-border">
    <h3>3次面接</h3>
    <% @third_interviews.each do |interview| %>
      <%= link_to interview.title, interview_path(interview.id), class: "btn btn-outline-secondary me-1" %>
    <% end %>
  </div>
  <div class="h3-border">
    <h3>2次面接</h3>
    <% @second_interviews.each do |interview| %>
      <%= link_to interview.title, interview_path(interview.id), class: "btn btn-outline-secondary me-1" %>
    <% end %>
  </div>
  <div class="h3-border">
    <h3>1次面接</h3>
    <% @first_interviews.each do |interview| %>
      <%= link_to interview.title, interview_path(interview.id), class: "btn btn-outline-secondary me-1" %>
    <% end %>
  </div>
  <div class="h3-border">
    <h3>書類選考</h3>
    <% @document_submit_interviews.each do |interview| %>
      <%= link_to interview.title, interview_path(interview.id), class: "btn btn-outline-secondary me-1" %>
    <% end %>
  </div>
</div>
