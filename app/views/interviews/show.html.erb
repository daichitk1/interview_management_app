<%= link_to "一覧", interviews_path, class:" btn btn-primary" %>
<%= link_to "面接の進捗を追加", new_interview_path(title: @interview.title), class: "btn btn-primary" %>
<div class="mt-5">
  <h2>企業詳細</h2>
  <div class="mt-3">
    <h3>企業名: <%= @interview.title %></h3>
    <div>
      <%= button_to "削除", @interview, method: :delete, class:" btn btn-danger mb-3" %>
    </div>
    <div class="interview-container interview-container-title mb-3">
      <div>選考状況</div>
      <div>作成日</div>
      <div>コメント</div>
      <div>編集ボタン</div>
    </div>
    <% @interviews.each do |interview| %>
      <div class="interview-container">
        <div class="w-50 h-75 badge bg-<%= Company.where(title: interview.title, select_status: interview.status).present? ? 'danger' : "primary" %> ">
          <%= I18n.t(interview.status) %>
        </div>
        <div><%= interview.created_at.strftime('%Y年%m月%d日') %></div>
        <div>
          <%= interview.content %>
        </div>
        <div>
          <%= link_to "編集", edit_interview_path(interview.id, title: interview.title), class:" btn btn-primary" %>
        </div>
      </div>
      <div>
        <span class="mx-5 dli-arrow-down"></span>
      </div>
      <br>
    <% end %>
  </div>
</div>