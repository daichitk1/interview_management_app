<%= link_to "一覧", interviews_path, class:" btn btn-primary" %>
<%= link_to "面接の進捗を追加", new_interview_path(title: @interview.title), class: "btn btn-primary" %>
<div class="mt-5">
  <div class="mt-3">
    <h3>企業名: <%= @interview.title %></h3>
    <div class="interview">
      <h4 class="mb-3 interview-log">面接記録</h4>
      <div class="interview-container interview-container-title mb-3">
        <div>選考状況</div>
        <div>作成日</div>
        <div>コメント</div>
        <div>編集ボタン</div>
        <div>削除ボタン</div>
      </div>
      <% @interviews.each do |interview| %>
        <div class="interview-container">
          <div class="w-50 h-75 interview-status badge bg-<%= Company.where(title: interview.title, select_status: interview.status).present? ? 'danger' : 'primary' %> ">
            <%= I18n.t(interview.status) %>
          </div>
          <div class="created-day"><%= interview.created_at.strftime('%Y年%m月%d日') %></div>
          <div>
            <%= interview.content %>
          </div>
          <div>
            <%= link_to "編集", edit_interview_path(interview.id, title: interview.title), class:" btn btn-primary" %>
          </div>
          <div>
            <%= button_to "削除", @interview, method: :delete, class:" btn btn-danger" if Company.where(title: interview.title, select_status: interview.status).present? %>
          </div>
        </div>

        <div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>